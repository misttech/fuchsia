  import("//build/components.gni")

  fuchsia_package("curl_pkg") {
    package_name = "curl"
    deps = [ ":curl_bin" ]
  }
}

config("curl_config") {
  include_dirs = [
    "src/include",
    "$target_gen_dir",
    "$target_gen_dir/curl",
  ]
  defines = [ "CURL_NO_OLDIES" ]
}

copy("copy_curl_config") {
  visibility = [ ":*" ]
  if (is_fuchsia) {
    sources = [ "curl_config.h.fuchsia" ]
  } else {
    sources = [ "curl_config.h.host" ]
  }
  outputs = [ "$target_gen_dir/curl_config.h" ]
}

