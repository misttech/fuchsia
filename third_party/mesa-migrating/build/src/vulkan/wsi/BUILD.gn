import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/vulkan/wsi"

config("wsi_config") {
  include_dirs = [
    src_dir,
    "$mesa_source_root/include/drm-uapi",
  ]
}

mesa_python_action("wsi_entrypoints") {
  outputs = [
    "$target_gen_dir/wsi_common_entrypoints.h",
    "$target_gen_dir/wsi_common_entrypoints.c",
  ]

  script = "$mesa_source_root/src/vulkan/util/vk_entrypoints_gen.py"

  inputs = [
    "$mesa_source_root/src/vulkan/util/vk_dispatch_table_gen.py",
    "$mesa_source_root/src/vulkan/util/vk_extensions.py",
    "$mesa_source_root/src/vulkan/util/vk_entrypoints.py",
    "$mesa_source_root/src/vulkan/registry/vk.xml",
  ]

  args = [
    "--xml",
    rebase_path("$mesa_source_root", root_build_dir) +
        "/src/vulkan/registry/vk.xml",
    "--proto",
    "--weak",
    "--out-h",
    rebase_path("$target_gen_dir/wsi_common_entrypoints.h", root_build_dir),
    "--out-c",
    rebase_path("$target_gen_dir/wsi_common_entrypoints.c", root_build_dir),
    "--prefix",
    "wsi",
  ]
}

# For non-Linux platforms.
mesa_source_set("stub") {
  public_configs = [ ":wsi_config" ]
  public_deps = [ "$mesa_build_root/src/vulkan/util" ]
  deps = [
    ":wsi_entrypoints",
    "$mesa_build_root/src/util:headers",
  ]
  sources = [
    "$src_dir/wsi_common.c",
    "$src_dir/wsi_common.h",
    "$target_gen_dir/wsi_common_entrypoints.c",
    "$target_gen_dir/wsi_common_entrypoints.h",
  ]

  include_dirs = [
    "$target_gen_dir",
    "$mesa_source_root/src/vulkan/runtime",
  ]

  configs = [ "//build/config:Wno-conversion" ]
}

mesa_source_set("wsi") {
  public_configs = [ ":wsi_config" ]
  public_deps = [ "$mesa_build_root/src/vulkan/util" ]
  deps = [
    ":wsi_entrypoints",
    "$mesa_build_root/src/util:headers",
    "$mesa_build_root/src/vulkan/runtime",
  ]
  sources = [
    "$src_dir/wsi_common.c",
    "$src_dir/wsi_common.h",
    "$target_gen_dir/wsi_common_entrypoints.c",
    "$target_gen_dir/wsi_common_entrypoints.h",
  ]

  include_dirs = [ "$target_gen_dir" ]

  configs = [ "//build/config:Wno-conversion" ]
}
