import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/compiler/glsl"

mesa_python_stdout_to_file_action("gen_ir_expression_operation") {
  output = "ir_expression_operation.h"
  script = "$src_dir/ir_expression_operation.py"
  libraries = [ "//third_party/mako" ]
  args = [ "enum" ]
}

config("gen_includes") {
  include_dirs = [ target_gen_dir ]
}

group("ir_expression_operation") {
  public_configs = [ ":gen_includes" ]

  deps = [ ":gen_ir_expression_operation" ]
}
