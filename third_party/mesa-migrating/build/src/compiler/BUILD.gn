import("../../mesa.gni")

src_dir = "$mesa_source_root/src/compiler"

config("compiler_config") {
  include_dirs = [
    src_dir,
    "$mesa_source_root/src/mapi",
    "$mesa_source_root/src/gallium/include",
  ]
}

mesa_source_set("compiler") {
  sources = [
    "$src_dir/builtin_type_macros.h",
    "$src_dir/glsl_types.cpp",
    "$src_dir/glsl_types.h",
    "$src_dir/nir_types.cpp",
    "$src_dir/nir_types.h",
    "$src_dir/shader_enums.c",
    "$src_dir/shader_enums.h",
  ]

  include_dirs = [ "$mesa_source_root/src/mesa" ]

  public_configs = [ ":compiler_config" ]

  deps = [
    "$mesa_build_root/src/util",
    "glsl:ir_expression_operation",
    "nir",
  ]

  configs = [
    "//build/config:Wno-conversion",
    "//build/config:Wno-strict-prototypes",
  ]
}
