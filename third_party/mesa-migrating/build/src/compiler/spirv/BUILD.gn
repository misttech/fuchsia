import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/compiler/spirv"

config("spirv_public_config") {
  include_dirs = [
    src_dir,
    "$target_gen_dir",
  ]
}

mesa_source_set("spirv") {
  public_configs = [ ":spirv_public_config" ]

  deps = [
    ":spirv_info",
    ":vtn_gather_types",
    ":vtn_generator_ids_h",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/compiler/nir:gen",
    "$mesa_build_root/src/util",
  ]

  include_dirs = [
    "$mesa_source_root/src/compiler",
    "$mesa_source_root/src/compiler/nir",
  ]

  sources = [
    "$src_dir/GLSL.ext.AMD.h",
    "$src_dir/GLSL.std.450.h",
    "$src_dir/OpenCL.std.h",
    "$src_dir/gl_spirv.c",
    "$src_dir/nir_load_libclc.c",
    "$src_dir/nir_lower_libclc.c",
    "$src_dir/nir_spirv.h",
    "$src_dir/spirv.h",
    "$src_dir/spirv_info.h",
    "$src_dir/spirv_to_nir.c",
    "$src_dir/vtn_alu.c",
    "$src_dir/vtn_amd.c",
    "$src_dir/vtn_cfg.c",
    "$src_dir/vtn_glsl450.c",
    "$src_dir/vtn_opencl.c",
    "$src_dir/vtn_private.h",
    "$src_dir/vtn_subgroup.c",
    "$src_dir/vtn_variables.c",
    "$target_gen_dir/spirv_info.c",
    "$target_gen_dir/vtn_gather_types.c",
  ]

  configs = [ "//build/config:Wno-strict-prototypes" ]
}

mesa_python_action("spirv_info") {
  output_name = "spirv_info.c"
  script = "$src_dir/spirv_info_c.py"

  outputs = [ "$target_gen_dir/$output_name" ]

  inputs = [ "$src_dir/spirv.core.grammar.json" ]

  args = [
    rebase_path(src_dir) + "/spirv.core.grammar.json",
    rebase_path(target_gen_dir, root_build_dir) + "/$output_name",
  ]
}

mesa_python_action("vtn_gather_types") {
  output_name = "vtn_gather_types.c"
  script = "$src_dir/vtn_gather_types_c.py"

  outputs = [ "$target_gen_dir/$output_name" ]
  inputs = [ "$src_dir/spirv.core.grammar.json" ]
  args = [
    rebase_path(src_dir) + "/spirv.core.grammar.json",
    rebase_path(target_gen_dir, root_build_dir) + "/$output_name",
  ]
}

mesa_python_action("vtn_generator_ids_h") {
  output_name = "vtn_generator_ids.h"
  script = "$src_dir/vtn_generator_ids_h.py"

  outputs = [ "$target_gen_dir/$output_name" ]
  inputs = [ "$src_dir/spir-v.xml" ]
  args = [
    rebase_path(src_dir) + "/spir-v.xml",
    rebase_path(target_gen_dir, root_build_dir) + "/$output_name",
  ]
}
