import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/util/magma"

mesa_source_set("magma") {
  public_deps = [
    "$mesa_build_root/include:c_compat",
    "//sdk/lib/magma_client:magma_headers",
  ]

  sources = [
    "$src_dir/inflight_list.c",
    "$src_dir/inflight_list.h",
    "$src_dir/magma_wait.c",
    "$src_dir/magma_wait.h",
    "$src_dir/u_magma.c",
    "$src_dir/u_magma.h",
    "$src_dir/u_magma_map.c",
    "$src_dir/u_magma_map.h",
    "$src_dir/u_magma_mmap.c",
    "$src_dir/u_magma_mmap.h",
  ]

  include_dirs = [ src_dir ]

  public_configs = [
    "$mesa_build_root/src/util:util_public_config",
    "//build/config:Wno-strict-prototypes",
  ]
}
