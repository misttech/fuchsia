import("../../mesa.gni")

src_dir = "$mesa_source_root/src/intel"

config("intel_config") {
  include_dirs = [ src_dir ]
  cflags = [ "-Wno-conversion" ]
}

mesa_source_set("isl_sse41") {
  sources = [ "$src_dir/isl/isl_tiled_memcpy_sse41.c" ]

  cflags = [ "-msse4.1" ]

  include_dirs = [ "$mesa_source_root/src/mesa" ]

  deps = [
    ":genxml",
    "$mesa_build_root/src/util",
    "dev",
  ]

  public_configs = [ ":intel_config" ]
}

mesa_source_set("isl") {
  public_configs = [ ":intel_config" ]

  sources = [
    "$src_dir/isl/isl.c",
    "$src_dir/isl/isl.h",
    "$src_dir/isl/isl_aux_info.c",
    "$src_dir/isl/isl_drm.c",
    "$src_dir/isl/isl_format.c",
    "$src_dir/isl/isl_gfx4.c",
    "$src_dir/isl/isl_gfx4.h",
    "$src_dir/isl/isl_gfx6.c",
    "$src_dir/isl/isl_gfx6.h",
    "$src_dir/isl/isl_priv.h",
    "$src_dir/isl/isl_storage_image.c",
    "$src_dir/isl/isl_tiled_memcpy_normal.c",
    "$target_gen_dir/isl_format_layout.c",
  ]

  include_dirs = [
    "$mesa_source_root/src/mesa",
    "$mesa_source_root/src/mapi",
    "$mesa_source_root/include/drm-uapi",
  ]

  deps = [
    ":gen_format_layout",
    ":genxml",
    ":isl_gen11",
    ":isl_gen12",
    ":isl_gen125",
    ":isl_gen7",
    ":isl_gen75",
    ":isl_gen8",
    ":isl_gen9",
    ":isl_sse41",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
  configs = [ "//build/config:Wno-conversion" ]
}

mesa_source_set("isl_gen7") {
  configs = [ ":intel_config" ]

  sources = [
    "$src_dir/isl/isl_emit_cpb.c",
    "$src_dir/isl/isl_emit_depth_stencil.c",
    "$src_dir/isl/isl_gfx7.c",
    "$src_dir/isl/isl_gfx7.h",
    "$src_dir/isl/isl_surface_state.c",
  ]

  defines = [ "GFX_VERx10=70" ]

  deps = [
    ":genxml",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
}

mesa_source_set("isl_gen75") {
  configs = [ ":intel_config" ]

  sources = [
    "$src_dir/isl/isl_emit_cpb.c",
    "$src_dir/isl/isl_emit_depth_stencil.c",
    "$src_dir/isl/isl_surface_state.c",
  ]

  defines = [ "GFX_VERx10=75" ]

  deps = [
    ":genxml",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
}

mesa_source_set("isl_gen8") {
  configs = [ ":intel_config" ]

  sources = [
    "$src_dir/isl/isl_emit_cpb.c",
    "$src_dir/isl/isl_emit_depth_stencil.c",
    "$src_dir/isl/isl_gfx8.c",
    "$src_dir/isl/isl_gfx8.h",
    "$src_dir/isl/isl_surface_state.c",
  ]

  defines = [ "GFX_VERx10=80" ]

  deps = [
    ":genxml",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
}

mesa_source_set("isl_gen9") {
  configs = [ ":intel_config" ]

  sources = [
    "$src_dir/isl/isl_emit_cpb.c",
    "$src_dir/isl/isl_emit_depth_stencil.c",
    "$src_dir/isl/isl_gfx9.c",
    "$src_dir/isl/isl_gfx9.h",
    "$src_dir/isl/isl_surface_state.c",
  ]

  defines = [ "GFX_VERx10=90" ]

  deps = [
    ":genxml",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
  configs += [ "//build/config:Wno-conversion" ]
}

mesa_source_set("isl_gen11") {
  configs = [ ":intel_config" ]

  sources = [
    "$src_dir/isl/isl_emit_cpb.c",
    "$src_dir/isl/isl_emit_depth_stencil.c",
    "$src_dir/isl/isl_surface_state.c",
  ]

  defines = [ "GFX_VERx10=110" ]

  deps = [
    ":genxml",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
}

mesa_source_set("isl_gen12") {
  configs = [ ":intel_config" ]

  sources = [
    "$src_dir/isl/isl_emit_cpb.c",
    "$src_dir/isl/isl_emit_depth_stencil.c",
    "$src_dir/isl/isl_gfx12.c",
    "$src_dir/isl/isl_surface_state.c",
  ]

  defines = [ "GFX_VERx10=120" ]

  deps = [
    ":genxml",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
}

static_library("isl_gen125") {
  configs += [
    ":intel_config",
    "$mesa_build_root/src:common_config",
  ]

  sources = [
    "$src_dir/isl/isl_emit_cpb.c",
    "$src_dir/isl/isl_emit_depth_stencil.c",
    "$src_dir/isl/isl_gfx12.c",
    "$src_dir/isl/isl_surface_state.c",
  ]

  defines = [ "GFX_VERx10=125" ]

  deps = [
    ":genxml",
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/util",
  ]
}

config("gen_public_config") {
  include_dirs = [ "$target_gen_dir" ]
}

group("genxml") {
  public_configs = [ ":gen_public_config" ]
  deps = [
    "genxml:gen_bits_header",
    "genxml:gen_pack11_header",
    "genxml:gen_pack125_header",
    "genxml:gen_pack12_header",
    "genxml:gen_pack75_header",
    "genxml:gen_pack7_header",
    "genxml:gen_pack8_header",
    "genxml:gen_pack9_header",
    "genxml:gen_rt_header",
  ]
}

mesa_python_action("gen_format_layout") {
  output_name = "isl_format_layout.c"
  script = "$src_dir/isl/gen_format_layout.py"

  outputs = [ "$target_gen_dir/$output_name" ]

  inputs = [ "$src_dir/isl/isl_format_layout.csv" ]

  args = [
    "--csv",
    rebase_path("$src_dir/isl/isl_format_layout.csv", root_build_dir),
    "--out",
    rebase_path("$target_gen_dir", root_build_dir) + "/$output_name",
  ]
}
