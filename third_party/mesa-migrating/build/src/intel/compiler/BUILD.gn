import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/intel/compiler"

config("compiler_config") {
  include_dirs = [
    src_dir,
    "$mesa_source_root/src/mesa",  # because brw_compiler.h includes
                                   # main/mtypes.h
    "$mesa_source_root/src/gallium/auxiliary",  # because main/macros.h includes
                                                # gallium/auxiliary/util/u_math.h
    "$mesa_source_root/src/gallium/include",  # because u_math.h includes
                                              # pipe/p_compiler.h
    "$mesa_source_root/src/intel",  # because brw_compiler.h includes
                                    # common/gen_device_info.h
  ]
}

config("warnings") {
  cflags = [
    # ../../third_party/mesa-migrating/src/src/intel/compiler/brw_vec4_gs_visitor.cpp:567:4: error: array designators are a C99 extension [-Werror,-Wc99-designator]
    #    [GL_POINTS] =_3DPRIM_POINTLIST,
    #    ^~~~~~~~~~~
    # 1 error generated.
    "-Wno-c99-designator",
    "-Wno-conversion",
    "-Wno-strict-prototypes",
    "-Wno-write-strings",
    "-Wno-unused-but-set-variable",

    # TODO(https://fxbug.dev/42084851): Remove -Wno-unknown-warning-option after the next Clang roll.
    "-Wno-unknown-warning-option",
    "-Wno-vla-cxx-extension",
  ]
}

