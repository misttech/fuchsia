import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/intel/blorp"

config("local_config") {
  include_dirs = [
    "$mesa_source_root/src/mesa",  # for program/
    "$mesa_source_root/src",  # for compiler/
  ]
  cflags = [ "-Wno-conversion" ]
}

mesa_source_set("blorp") {
  public_deps = [ "$mesa_build_root/src/compiler/nir" ]

  public_configs = [ ":local_config" ]

  deps = [
    "$mesa_build_root/include:c_compat",
    "$mesa_build_root/src/intel/compiler",
    "$mesa_build_root/src/util:headers",
  ]

  sources = [
    "$src_dir/blorp.c",
    "$src_dir/blorp_blit.c",
    "$src_dir/blorp_clear.c",
    "$src_dir/blorp_genX_exec.h",
    "$src_dir/blorp_priv.h",
  ]

  configs = [ "//build/config:Wno-strict-prototypes" ]
}
