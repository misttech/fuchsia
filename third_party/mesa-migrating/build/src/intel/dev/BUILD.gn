import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/intel/dev"

config("dev_config") {
  include_dirs = [ "$mesa_source_root/src/intel" ]
}

mesa_source_set("dev") {
  sources = [
    "$src_dir/intel_debug.c",
    "$src_dir/intel_debug.h",
    "$src_dir/intel_device_info.c",
    "$src_dir/intel_device_info.h",
    "$src_dir/intel_hwconfig.c",
    "$src_dir/intel_hwconfig.h",
  ]
  public_configs = [ ":dev_config" ]
  include_dirs = [ "$mesa_source_root/include/drm-uapi" ]
  public_deps = [ "$mesa_build_root/src/util" ]
  defines = [ "USE_MAGMA=1" ]
  configs = [ "//build/config:Wno-conversion" ]
  deps = [ "$mesa_build_root/src:sha1" ]
}
