import("../../../mesa.gni")

src_dir = "$mesa_source_root/src/intel/ds"

config("ds_config") {
  include_dirs = [
    "$target_gen_dir",
    "$mesa_build_root/src/mesa",
  ]
}

mesa_source_set("ds") {
  public_configs = [ ":ds_config" ]

  public_deps = [
    ":gen_tracepoints",
    "$mesa_build_root/src/compiler/nir",
  ]

  sources = [
    "$src_dir/intel_driver_ds.cc",
    "$target_gen_dir/intel_tracepoints.c",
  ]

  include_dirs = [ src_dir ]

  deps = [ "$mesa_build_root/src/intel/common" ]
}

mesa_python_action("gen_tracepoints") {
  script = "$src_dir/intel_tracepoints.py"

  output_h = "$target_gen_dir/intel_tracepoints.h"
  output_perfetto_h = "$target_gen_dir/intel_tracepoints_perfetto.h"
  output_c = "$target_gen_dir/intel_tracepoints.c"

  outputs = [
    output_h,
    output_perfetto_h,
    output_c,
  ]

  inputs = [ "$mesa_source_root/src/util/perf/u_trace.py" ]

  args = [
    "-p",
    rebase_path("$mesa_source_root/src/util/perf", root_build_dir),
    "--utrace-hdr",
    rebase_path(output_h, root_build_dir),
    "--perfetto-hdr",
    rebase_path(output_perfetto_h, root_build_dir),
    "--utrace-src",
    rebase_path(output_c, root_build_dir),
  ]
}
