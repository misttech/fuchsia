import("../mesa.gni")

src_dir = "$mesa_source_root/tests"

group("tests") {
  testonly = true

  public_deps = [
    ":mesa_integration_tests",
    ":mesa_unit_tests",
  ]
}

executable("mesa_unit_tests") {
  testonly = true
  assert(is_fuchsia)

  sources = [ "$src_dir/main.cc" ]

  deps = [
    "$mesa_build_root/src/util/tests",
    "$mesa_build_root/src/util/tests/futex",
    "$mesa_build_root/src/util/tests/inflight_list",
    "$mesa_build_root/src/util/tests/magma_map",
    "//src/graphics/lib/magma/src/libmagma",
    "//third_party/googletest:gtest",
  ]
}

executable("mesa_integration_tests") {
  testonly = true
  assert(is_fuchsia)

  sources = [ "$src_dir/main.cc" ]

  deps = [
    "$mesa_build_root/src/util/tests/magma_wait",
    "//src/graphics/lib/magma/src/libmagma",
    "//third_party/googletest:gtest",
  ]
}
