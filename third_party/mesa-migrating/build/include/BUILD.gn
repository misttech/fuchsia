import("../mesa.gni")

src_dir = "$mesa_source_root/include"

config("include_config") {
  include_dirs = [ src_dir ]
}

config("vulkan_public_config") {
  if (is_fuchsia) {
    defines = [ "VK_USE_PLATFORM_FUCHSIA=1" ]
  }
}

mesa_source_set("vulkan") {
  public_configs = [
    ":include_config",
    ":vulkan_public_config",
  ]
  sources = [
    "$src_dir/vulkan/vk_platform.h",
    "$src_dir/vulkan/vulkan.h",
    "$src_dir/vulkan/vulkan_intel.h",
  ]
}

mesa_source_set("c_compat") {
  public_configs = [ ":include_config" ]

  sources = [
    "$src_dir/c99_alloca.h",
    "$src_dir/c99_compat.h",
    "$src_dir/no_extern_c.h",
  ]
}

config("drm_config") {
  include_dirs = [ "$mesa_source_root/drm-uapi" ]
}

source_set("drm-uapi") {
  public_configs = [ ":drm_config" ]
}

config("gbm_config") {
  include_dirs = [ "$mesa_source_root/src/gbm/main" ]
}

source_set("gbm-header") {
  public_configs = [ ":gbm_config" ]
}
